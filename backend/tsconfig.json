{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": true,
    // "noUnusedLocals": false
    "typeRoots": ["node_modules/@types", "./types"],
    "types": ["@types/node"]
  },
  "lib": ["es2016"],
  "include": ["src/**/*", "src/types/env.d.ts"],
  "exclude": ["node_modules"]
}