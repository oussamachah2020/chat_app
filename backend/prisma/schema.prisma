// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id 
  fullName String
  email String @unique()
  password String
  verified Boolean @default(false)
  messages Message[]
}

model Message {
  id String @id
  content String
  sent_at DateTime 
  sender User @relation(fields: [senderId], references: [id])
  senderId String 
}

model Receiver {
  id String @id
  receiverId String
  received_at DateTime
  messageId String
}